@model WebStore.Models.Worker

@{
    ViewBag.Title = "Детальные данные по сотруднику";
}

<div class="container">
    <h1>@ViewBag.Title</h1>
    <hr />
    <a asp-controller="Home" asp-action="Index">Главная страница</a> / <a asp-controller="Workers" asp-action="Index">Все сотрудники магазина</a>
    <hr />
    <p>Идентификатор: @Model.Id</p>
    <p>Фамилия: @Model.LastName</p>
    <p>Имя: @Model.FirstName</p>
    <p>Отчество: @Model.Patronymic</p>
    <p>Возраст: @Model.Age лет</p>
    <p>Дата рождения: @Model.Birthday</p>
    <p>Дата трудоустройства: @Model.EmploymentDate</p>
    <p>Количество детей: @Model.CountClildren штук</p>
</div>

