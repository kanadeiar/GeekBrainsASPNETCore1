@model WebStore.ViewModels.WorkerViewModel

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<div class="container">

    <h1>Удаление coтрудника @Model.LastName @Model.FirstName @Model.Patronymic</h1>

    <h3>Действительно удалить этого сотрудника?</h3>
    <div>
        <hr/>
        <dl class="row">

            @Html.HiddenFor(Model => Model.Id)
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patronymic)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Birthday)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmploymentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmploymentDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountChildren)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountChildren)
            </dd>
        </dl>

        <form asp-controller="Workers" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Подтвердить удаление сотрудника" class="btn btn-danger"/>
        </form>

        <a asp-controller="Workers" asp-action="Index" class="btn btn-default">Назад к списку сотрудников</a>
    </div>

</div>

