@model WebStore.Models.Worker

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<div class="container">

    <h1>Удаление coтрудника @Model.LastName @Model.FirstName @Model.Patronymic</h1>

    <h3>Действительно удалить этого сотрудника?</h3>
    <div>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patronymic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Birthday)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmploymentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmploymentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountClildren)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountClildren)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Timestamp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Timestamp)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger"/> |
            <a asp-action="Index">Назад к списку</a>
        </form>
    </div>

</div>

