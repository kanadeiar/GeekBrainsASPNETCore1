@model IEnumerable<WebStore.Domain.WebModels.UserProfile.UserOrderWebModel>
@{
    ViewBag.Title = "Заказы пользователя";
    Layout = "_UserProfileLayout";
}

<div class="row form-group">
    <h2>@ViewBag.Title</h2>
</div>

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Количество</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @foreach (var order in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.Count</td>
                <td>@order.PriceSum</td>
            </tr>
        }
    </tbody>
</table>
