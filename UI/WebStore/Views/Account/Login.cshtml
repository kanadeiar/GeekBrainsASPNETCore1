@model WebStore.Domain.WebModels.Account.LoginWebModel
@{
    ViewBag.Title = "Вход";
}

<section id="form">
    <!--form-->
    <div class="container">
        <vc:bread-crumbs />

        <h1>@ViewBag.Title</h1>
        
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" asp-route-returnUrl="@Model?.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Логин"/>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="Пароль"/>
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить меня
                        </span>

                        <button type="submit" class="btn btn-default">Вход</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->

@section Scripts
{
    <partial name="Partial/_ValidationScriptsPartial"/>
}
