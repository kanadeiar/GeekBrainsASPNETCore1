@using WebStore.Domain.Identity
@model WebStore.Domain.WebModels.EditWorkerWebModel

@{
    ViewBag.Title = "Детальные данные по сотруднику";
}

<div class="container">

    <vc:bread-crumbs />

    <h1>@ViewBag.Title</h1>
    <hr />
    <a asp-controller="Home" asp-action="Index">Главная страница</a> / <a asp-controller="Workers" asp-action="Index">Все сотрудники магазина</a>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patronymic)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patronymic)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Birthday)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Birthday)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmploymentDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmploymentDate)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CountChildren)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CountChildren)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
    </dl>

    <div>
        @if (User.IsInRole(Role.Administrators))
        {
            <div class="row form-group">
                <div class="col-sm-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Редактирование</a>
                </div>
                <div class="col-sm-3">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удаление сотрудника</a>
                </div>
            </div>
        }
        <div class="col-sm-12 form-group">
            <a asp-action="Index">Назад к списку</a>
        </div>
    </div>
</div>

