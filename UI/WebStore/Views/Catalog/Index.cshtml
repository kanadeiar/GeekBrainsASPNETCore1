@model WebStore.Domain.WebModels.CatalogWebModel

@{
    ViewBag.Title = "Каталог";
}

<section>
    <div class="container">

        <vc:bread-crumbs/>
        
        <h1>@ViewBag.Title</h1>
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebarPartial"/>
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_ProductsPartial" model="Model.Products"/>
                </div>
                
                <div id="catalog-pagination-container">
                    <partial name="Partial/_CatalogPaginationPartial" model="Model" />
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="~/js/Catalog/catalog-logic.js"></script>
    <script>
        $(function () {
            Catalog.init({
                getProductPartialViewLink: "@Url.Action("ApiGetProductPartialView","Catalog")",
                getCatalogPaginationPartialViewLink: "@Url.Action("ApiGetCatalogPaginationPartialView", "Catalog")"
            });
        })
    </script>
}
