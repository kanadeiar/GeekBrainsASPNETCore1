@model WebStore.Domain.WebModels.CatalogWebModel

@{
    ViewBag.Title = "Каталог товаров";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebarPartial" />
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturedItemsPartial" model="Model.Products"/>
                
                <page-link page-model="Model.PageWebModel"
                           page-action="Index"
                           page-url-sectionId="Model.SectionId"
                           page-url-brandId="Model.BrandId"></page-link>
            </div>
        </div>
    </div>
</section>
