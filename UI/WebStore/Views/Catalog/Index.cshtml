@model WebStore.Domain.WebModels.CatalogWebModel

@{
    ViewBag.Title = "Каталог";
}

<section>
    <div class="container">

        <vc:bread-crumbs/>
        
        <h1>@ViewBag.Title</h1>
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebarPartial"/>
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_ProductsPartial" model="Model.Products"/>
                </div>

                <page-link page-model="Model.PageWebModel"
                           page-action="Index"
                           page-url-sectionId="Model.SectionId"
                           page-url-brandId="Model.BrandId"
                           page-url-pageSize="@Context.Request.Query["PageSize"]"></page-link>
            </div>
        </div>
    </div>
</section>
